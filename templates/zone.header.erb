$TTL <%= @ttl %>
@ IN SOA <%= @soa %>. <%= @_contact %> (
	<%= @serial %>	;Serial
	<%= @refresh %>	;Refresh
	<%= @update_retry %>	;Retry
	<%= @expire %>	;Expire
	<%= @negttl %>	;Negative caching TTL
)

@ IN NS <%= @soa %>.
<% unless @reverse -%>
<% if @soaip -%>
<%= @soa %>. IN A <%= @soaip %>
<% end -%>
<% if @soaipv6 -%>
<%= @soa %>. IN AAAA <%= @soaipv6 %>
<% end -%>
<% end -%>
